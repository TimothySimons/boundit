{
    "name": "boundit",
    "version": "1.0.0",
    "devDependencies": {
        "esbuild": "^0.21.4",
        "lite-server": "^2.6.1",
        "typescript": "^5.4.5"
    },
    "scripts": {
        "build:js": "tsc --sourceMap --declaration",
        "build:bundle": "esbuild src/boundit.ts --bundle --format=esm --outfile=dist/bundle.js",
        "dist": "npm run build:js && npm run build:bundle",
        "start": "lite-server --config=local-server.json"
    }
}
