{
  "include": ["src/**/*"],
  "exclude": [],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "strict": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  }
}
